                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Marked}" Value="true">
                                    <Setter Property="Background" Value="{DynamicResource Footer.Static.Background}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TreeView.ItemContainerStyle>

                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate  ItemsSource="{Binding Path=Childrens}">
                            <HeaderedContentControl Header="{Binding Path=TagValue}" Focusable="False"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>

            </Grid>
